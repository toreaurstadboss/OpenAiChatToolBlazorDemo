@page "/"

<PageTitle>Home</PageTitle>

<div class="container">
    <div class="row">
        Jolly Travels Sales Bot using OpenAI Chat Tool 
    </div>
    <div class="row">
        <textarea class="form-control col-md-6" name="questionTextArea" id="questionTextArea" @bind="Question" placeholder="Enter the month and year to show sales data" />
    </div>
    <div class="row mt-3">
        <br />
        <button type="button" class="form-control btn btn-outline-primary" @onclick="OnEnterQuestion">
            Ask Travel Agency Sales Bot
        </button>
    </div>

    <div class="mt-3">
        <p>@Message</p>
    </div>
</div>